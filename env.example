# Sample environment configuration for UniFi Network MCP server
# Copy this file to `.env` and fill in real credentials.

UNIFI_HOST=192.168.1.1
UNIFI_USERNAME=admin
UNIFI_PASSWORD=changeme
UNIFI_PORT=443
UNIFI_SITE=default
UNIFI_VERIFY_SSL=false
CONFIG_PATH="src/config/config.yaml"

# Optional logging level
LOG_LEVEL=INFO 

# Debug mode - enables debug logging in FastMCP server
UNIFI_MCP_DEBUG=false

# Read-only mode - disables all mutating tools (create, update, toggle, etc.)
# Useful for safe cloud LLM integrations where only read operations are desired
UNIFI_MCP_READ_ONLY_MODE=false

# HTTP transport options (optional)
UNIFI_MCP_HTTP_ENABLED=false
UNIFI_MCP_HTTP_TRANSPORT=http  # Options: http (recommended), sse (legacy)
UNIFI_MCP_HTTP_PATH=/mcp